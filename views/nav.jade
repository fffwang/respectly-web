
extends ./layout.jade

block navigation
  - var email = session.email;
  header
    nav.mainnav
      h1.site-logo
        a.logo(href="/")
          img(alt="Respect.ly" id="mlogo" src="/images/wl.png")

      ul.left
        li
          a(href='#') ABOUT
        li
          a(href="#") START
      audio#audio(loop autoplay src="/music/11.mp3")
      ul.right
        if email
          li
            a(href="/signout") LOGOUT
        else
          li
            a(href='#') ABOUT
          li
            a(href="#") START

        audio#audio(loop autoplay src="/music/11.mp3")

        ul.right
          if id
            li
              a(href="/signout") LOGOUT
          else
            li
              a(href="#" data-toggle="modal" data-target="#join") JOIN
            li
              a(href="#" data-toggle="modal" data-target="#login") LOGIN              
          li#music-icon
            a(href="/").music
              span.glyphicon.glyphicon-pause.playmode(aria-hidden="true")
          li#menu-icon
            a(href="#") MENU
              .down-arrow      
        .dropmenu
          ul
            li
              a(href='#') ABOUT
            li
              a(href="#") START
            if id
              li
                a(href="/signout") LOGOUT
            else
              li
                a(href="#" data-toggle="modal" data-target="#join") JOIN
              li
                a(href="#" data-toggle="modal" data-target="#login") LOGIN              

  .subheader
    nav.subnav
      h1.site-logo
        a.logo(href="/")
          img(alt="Respect.ly" id="slogo" src="/images/vl.png")
      ul.left
        li
          a(href='#') ABOUT
        li
          a(href="#") START
      ul.right
        if email
          li
            a(href="/signout") LOGOUT
        else
          li
            a(href="#" data-toggle="modal" data-target="#join") JOIN
          li
            a(href="#" data-toggle="modal" data-target="#login") LOGIN
        li
          a(href="/").music
            span.glyphicon.glyphicon-pause.playmode(aria-hidden="true")

