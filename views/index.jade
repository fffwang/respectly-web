extends ./nav.jade

block content

  div.video
    div.mask
    video(preload loop autoplay poster="/images/work.jpg")
      // source(type="video/webm; codecs=vp8,vorbis" src="/videos/work.webm")
      source(type="video/mp4; codecs=avc1.42E01E,mp4a.40.2" src="/videos/work.mp4")

  div.wrapper
    div.landing-banner
      h3 We Respect You and Your Projects
      h4 Respect.ly는 고대생들이 어떤 변화를 일으키고 싶을 때, 프로젝트 지지자들을 손쉽게 모을 수 있는 Crowd Supporting Platform입니다.

  #join.modal
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-label="Close")
            span(aria-hidden="true") &times;
          h4.modal-title Modal title
        .modal-body
          label 아이디 
          input#join-id.form-control(type="text", name="join-id") 
          br
          label 비밀번호  
          input#join-password.form-control(type="password", name="join-password")  
          br
          label 포탈 아이디 
          input#join-email.form-control(type="email", name="join-email")
          label 학번 
          input#join-student-number.form-control(type="text", name="join-student-number") 
          label 이름  
          input#join-name.form-control(type="text", name="join-name") 


        .modal-footer
          #modal-message-container
          button.btn.btn-default(type="button", data-dismiss="modal") 닫기 
          button#joinCall.btn.btn-primary(type="button", data-dismiss="modal") 가입 

  #login.modal
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button" data-dismiss="modal" aria-label="Close")
            span(aria-hidden="true") &times;
          h4.modal-title Modal title
        .modal-body
          label 아이디 
          input#login-id.form-control(type="text", name="login-id") 
          br
          label 비밀번호  
          input#login-password.form-control(type="password", name="login-password")  
          br

        .modal-footer
          button.btn.btn-default(type="button" data-dismiss="modal") 닫기 
          button#loginCall.btn.btn-primary(type="button" data-dismiss="modal") 로그인
  
  section.brief-container
    .brief-project
      .brief-project-inside
        h6 우리들의 프로젝트
        .brief-project-picture
        .brief-project-content
          .brief-project-collaborate
          .brief-project-support
          .brief-project-progressmask
            .brief-project-progressbar



